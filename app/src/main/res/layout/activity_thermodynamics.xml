<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.chemme.StatesOfMatter.StatesOfMatter">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@android:color/black"
                    android:minHeight="?attr/actionBarSize"
                    app:theme="@style/ToolbarTheme"
                    >
                    <TextView
                        android:id="@+id/toolbarTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Thermochemistry"
                        android:gravity = "center"
                        android:layout_marginRight="?android:attr/actionBarSize"
                        android:textColor="@android:color/white"
                        android:textSize = "30sp"/>
                </androidx.appcompat.widget.Toolbar>

                <Button
                    android:id="@+id/heatingcurves"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/heatingcurves"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:paddingTop="30dp"
                    android:text="Heating Curves"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    tools:fontFamily="@font/iceland" />

                <Button
                    android:id="@+id/energyenthalpyandentropy"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/eee"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:paddingTop="30dp"
                    android:text="Energy, Enthalpy, and Entropy"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    tools:fontFamily="@font/iceland" />

                <Button
                    android:id="@+id/thermolaws"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/lot"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:paddingTop="30dp"
                    android:text="Laws of Thermodynamics"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    tools:fontFamily="@font/iceland" />

                <Button
                    android:id="@+id/spontaneity"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/spontaneity"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:paddingTop="30dp"
                    android:text="Spontaneity"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    tools:fontFamily="@font/iceland" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
