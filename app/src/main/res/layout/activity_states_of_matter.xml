<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.chemme.StatesOfMatter.StatesOfMatter">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/statesofmatter"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="States of Matter"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    tools:fontFamily="@font/iceland" />

                <Button
                    android:id="@+id/solidstructurebutton"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/solidstructures"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:paddingTop="30dp"
                    android:text="Solid Structures"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    tools:fontFamily="@font/iceland" />

                <Button
                    android:id="@+id/phasechangesbutton"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/phasechanges"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:paddingTop="30dp"
                    android:text="Phase Changes"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    tools:fontFamily="@font/iceland" />

                <Button
                    android:id="@+id/gaslawsbutton"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/gaslaws"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:paddingTop="30dp"
                    android:text="Gas Laws"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    tools:fontFamily="@font/iceland" />

                <Button
                    android:id="@+id/gaspropertiesbutton"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/gasproperties"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:paddingTop="30dp"
                    android:text="Gas Properties"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="27sp"
                    tools:fontFamily="@font/iceland" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
