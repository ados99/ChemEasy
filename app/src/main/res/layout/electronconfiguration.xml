<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="34dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/energylevelspager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".AtomicTheory.HistoryOfTheAtom.HistoryOfTheAtom">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ScrollView
                    android:id="@+id/scrollView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/electronconfiguration"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/electronenergylevels"
                            android:gravity="center"
                            android:text="Electron Configuration"
                            android:textColor="@android:color/white"
                            android:textSize="40sp"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:fontFamily="@font/iceland"
                            tools:layout_editor_absoluteX="0dp" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="397dp"
                            android:layout_height="342dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="64dp"
                            android:layout_marginStart="64dp"
                            android:src="@drawable/electronconfiguration"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/atomicradius" />

                        <TextView
                            android:id="@+id/electronconfiguration1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="21dp"
                            android:layout_marginStart="21dp"

                            android:text="@string/electron_configuration_content"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:fontFamily="@font/iceland" />

                    </LinearLayout>
                </ScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>