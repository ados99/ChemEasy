<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ScrollView
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="78dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAllCaps="false">

                <TextView
                    android:id="@+id/endofsection"
                    tools:fontFamily="@font/iceland"
                    tools:layout_editor_absoluteX="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="End of Section"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/question"
                    tools:fontFamily="@font/iceland"
                    tools:layout_editor_absoluteX="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_marginTop="0dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="You have finished this section. What would you like to do?"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/choice1"
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:background="#ffffff"
                    android:text="Take the Quiz"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/choice2"
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Review again"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/choice3"
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Go to Home Page"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>