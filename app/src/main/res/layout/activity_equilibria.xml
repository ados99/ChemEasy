<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chemme.AtomicTheory.AtomicTheory">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/equilibria"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:gravity="center"
                android:text="Equilibria"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/kinetics"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/kinetics"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="Kinetics"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/acidsandbases"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/acidsandbases"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="Acids and Bases"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/solubility"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/solubility"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="Solubility"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/titrationcurves"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/titrationcurves"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="Titration Curves"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
