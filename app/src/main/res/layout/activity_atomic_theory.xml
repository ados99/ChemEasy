<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chemme.AtomicTheory.AtomicTheory">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/black"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/ToolbarTheme"
                >
                <TextView
                    android:id="@+id/toolbarTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Atomic Theory"
                    android:gravity = "center"
                    android:layout_marginRight="?android:attr/actionBarSize"
                    android:textColor="@android:color/white"
                    android:textSize = "35sp"/>
            </androidx.appcompat.widget.Toolbar>

            <Button
                android:id="@+id/historyoftheatombutton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/historyoftheatom"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="History of the Atom"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/electromagnetic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/emradiation"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="EM Radiation"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/theperiodictablebutton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/periodictable"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="The Periodic Table"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/periodictrendsbutton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/periodictrends"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="Periodic Trends"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/electonenergylevelsbutton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/electronenergylevels"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="Electron Energy Levels"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
