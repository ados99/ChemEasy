<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imfspager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AtomicTheory.HistoryOfTheAtom.HistoryOfTheAtom"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pibonds"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/hybridization"
                        android:gravity="center"
                        android:text="Pi Bonds"
                        android:textColor="@android:color/white"
                        android:textSize="40sp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:fontFamily="@font/iceland"
                        tools:layout_editor_absoluteX="0dp" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="350dp"
                        android:layout_height="313dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="64dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/sigmabonds"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.497"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/introperiodictable1" />

                    <TextView
                        android:id="@+id/pibonds2"
                        android:layout_width="match_parent"
                        android:layout_height="252dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/pi_bonds_content"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                        tools:fontFamily="@font/iceland" />

                </LinearLayout>
            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>