<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="34dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imfspager"
            tools:context=".AtomicTheory.HistoryOfTheAtom.HistoryOfTheAtom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">


                <ScrollView
                    android:id="@+id/scrollView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/intermolecularforces"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/imfs"
                            android:gravity="center"
                            android:text="Intermolecular Forces"
                            android:textColor="@android:color/white"
                            android:textSize="40sp"
                            tools:fontFamily="@font/iceland"
                            tools:layout_editor_absoluteX="0dp" />

                        <TextView
                            android:id="@+id/intermolecularforces2"
                            android:layout_width="match_parent"
                            android:layout_height="252dp"
                            android:layout_marginEnd="21dp"
                            android:layout_marginStart="21dp"
                            android:layout_marginTop="16dp"
                            android:text="Previously, we studied bonds between atoms that made up molecules. However, there are
also attractions that molecules have with each other, called Intermolecular forces (IMFs). These attractions vary based on the polarity
and the electronegativity differences in atoms. Polar and more electronegative molecules can form stronger IMFs than those without these
traits. It is important to note that molecules may have more than one IMF between them."
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView"
                            tools:fontFamily="@font/iceland" />

                    </LinearLayout>
                </ScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>