<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id = "@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chemme.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >


            <TextView
                android:id="@+id/ChemMe"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:gravity="center"
                android:text="ChemEasy"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/atomictheorybutton"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:background="#b72f2f"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="Atomic Theory"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/molecularstructurebutton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#47a332"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="Molecular Structure"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/statesofmatterbutton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#c6bc29"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="States of Matter"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/thermochemistrybutton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#dd6a30"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="Thermochemistry"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/equilibriabutton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#042960"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="Equilibria"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/quizzesbutton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#93166c"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="Quizzes"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />

            <Button
                android:id="@+id/aboutbutton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:gravity="right"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="About"
                android:textAllCaps="false"
                android:textSize="27sp"
                tools:fontFamily="@font/iceland" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
